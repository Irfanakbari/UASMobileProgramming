<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:background="@drawable/bg">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reg"
                android:gravity="center"
                android:text="@string/selamat_datang"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                    android:text="@string/title_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_med"
                    android:id="@+id/userLogin"
                    android:gravity="center"
                    android:textSize="48sp"
                    android:textColor="#FFFFFF"/>
        </LinearLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="82dp"/>

        <Button
                android:text="@string/divisor"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:id="@+id/divisor"
                android:backgroundTint="#FFE0E0"
                android:fontFamily="@font/poppins_med"
                android:textColor="#000000"
                tools:ignore="DuplicateSpeakableTextCheck"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        <Button
                android:text="Operation Math"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:id="@+id/operationMath"
                android:backgroundTint="#FFE0E0"
                android:fontFamily="@font/poppins_med"
                android:textColor="#000000"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        <Button
                android:text="Call It Even"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:id="@+id/callItEven"
                android:backgroundTint="#FFE0E0"
                android:fontFamily="@font/poppins_med"
                android:textColor="#000000"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        <Button
            android:id="@+id/credit"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFE0E0"
            android:fontFamily="@font/poppins_med"
            android:text="KELUAR"
            android:textColor="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>